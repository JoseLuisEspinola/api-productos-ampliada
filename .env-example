# Configuración del entorno (.env.example)

# Puerto donde corre el servidor
PORT=3000

# Clave secreta para firmar y verificar tokens JWT
JWT_SECRET=TuClaveJWTSeguraAquí

# Credenciales Firebase Admin SDK (cuenta de servicio)
FIREBASE_PROJECT_ID=api-productos-firebase
FIREBASE_PRIVATE_KEY_ID=TuPrivateKeyID
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\\nTuClavePrivadaEnLíneas\\n-----END PRIVATE KEY-----\\n"
FIREBASE_CLIENT_EMAIL=servicio@api-productos.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=TuFirebaseClientID
FIREBASE_STORAGE_BUCKET=api-productos-firebase.appspot.com
